#!/usr/bin/env groovy
@Library('sim2@feature1')_

//log.info 'Starting'
//log.warning 'Nothing to do!'

pipeline{

	agent any
	
stages{
stage ('Checkout'){
   
   steps {
            echo "Step Checkout"
              gitCheckOut()  
            }
    
   
   
}

 
stage('Test'){
 when {
 			branch 'feature1'
	   echo "Inside When"
	   
	   steps {
            echo "Step TEST"
                
            }
	   } 
	   
	  
   //buildTest()

}

stage('Deploy'){
    
    steps {
            echo "Step Deploy"
              buildMaven()
            }
    buildMaven()
  }
  }
}